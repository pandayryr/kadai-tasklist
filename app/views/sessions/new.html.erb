<h1>ログイン</h1>

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
  <%= f.label :email, 'Email' %>
  <%= f.email_field :email %>
  
  <%= f.label :password, 'Password' %>
  <%= f.password_field :password %>
  
  <%= f.submit 'ログイン' %>
  
<% end %>

<p>新規登録は<%= link_to 'コチラ', signup_path %></p>