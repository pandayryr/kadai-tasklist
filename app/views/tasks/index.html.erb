<% if logged_in? %>

  <h1><%= @current_user.name %>のタスク一覧</h1>
  
  <% @current_user.tasks.each do |task| %>
    <li><%= link_to task.id, task_path(task) %>：<%= task.content %> &gt; <%= task.status %></li>
  <% end %>

  <%= link_to '新規タスクの作成', new_task_path %>
  
<% else %>
  <%= link_to 'ログイン', login_path %>
  <%= link_to '新規登録', signup_path %>
<% end %>