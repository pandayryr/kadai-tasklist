<% if task.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(task.errors.count, "error") %> prohibited this message from being saved:</h2>
        
        <ul>
            <% task.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with(model: task, local: true) do |f| %>
    <%= f.label :content, 'タスク内容' %>
    <%= f.text_field :content, placeholder: 'taskを入力' %>
    
    <%= f.label :status, 'ステータス' %>
    <%= f.text_field :status %>
    
    <%= f.submit '投稿' %>
<% end %>